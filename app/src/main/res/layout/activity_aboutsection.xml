<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Academyaboutsection">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:textAllCaps="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#E28B25"
            android:text="Admission Guidelines"
            android:textColor="#ffff">


        </Button>

        <Button
            android:textColor="#ffff"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="Transportation Details"
            android:layout_height="wrap_content"
            android:background="#E28B25">



        </Button>



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:textAllCaps="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#E28B25"
            android:text="Amenities"
            android:textColor="#ffff">
        </Button>

        <Button
            android:textAllCaps="false"
            android:textColor="#ffff"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Gallery"
            android:layout_height="wrap_content"
            android:background="#E28B25">
        </Button>
    </LinearLayout>

  <LinearLayout
      android:layout_marginTop="10dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center"
      android:weightSum="4">

      <ImageView
          android:layout_margin="5dp"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:layout_weight="1"
          android:src="@drawable/a1"></ImageView>
          <ImageView
              android:layout_margin="5dp"
              android:layout_width="100dp"
              android:layout_height="100dp"
              android:layout_weight="2"
              android:src="@drawable/a2"></ImageView>

          <ImageView

              android:layout_margin="5dp"
              android:layout_width="100dp"
              android:layout_height="100dp"
              android:layout_weight="3"
              android:src="@drawable/a3"></ImageView>


      <ImageView

          android:layout_margin="5dp"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:layout_weight="4"
          android:src="@drawable/a3"></ImageView>




  </LinearLayout>

  </LinearLayout>

